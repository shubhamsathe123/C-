#include<iostream>
using namespace std;

class parent
{
    int x=10;
    public:
    void show()
    {
        cout<<"\n x value"<<x;
    } 
};

class child:public parent
{
    int y;
    public:
    void display()
    {
        show();
        cout<<"\n y value"<<y;
    }
};

int main()
{
    child c;
    c.display();
    return 0;
}
